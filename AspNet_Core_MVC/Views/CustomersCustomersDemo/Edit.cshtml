        </div>
        <div class="editor-label">
         @Html.LabelFor(model => model.CustomersTypeId)
        </div>
        <div class="editor-field">
			@Html.DropDownListFor(model => model.CustomersTypeId, (IEnumerable<SelectListItem>)ViewBag.CustomersDemographicsList, new { @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.CustomersTypeId, "", new { @class = "text-danger" })
