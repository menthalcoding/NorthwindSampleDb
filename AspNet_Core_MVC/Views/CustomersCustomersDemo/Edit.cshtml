@model NorthwindSampleDb.Models.CustomersCustomersDemo

@{
	ViewData["Title"] = "Edit - CustomersCustomersDemo";
	Layout="~/Pages/Shared/_Layout.cshtml";
}

<h1>CustomersCustomersDemo - Edit</h1>
@using (Html.BeginForm())
{
