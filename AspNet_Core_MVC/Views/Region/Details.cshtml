@model NorthwindSampleDb.Models.Region

@{
	ViewData["Title"] = "Details - Region";
	Layout="~/Pages/Shared/_Layout.cshtml";
}

<h1>Region - Details</h1>

    <div class="display-label">RegionID</div>
    <div class="display-field">@Html.DisplayFor(model => model.RegionID)</div>
    <div class="display-label">RegionDescription</div>
    <div class="display-field">@Html.DisplayFor(model => model.RegionDescription)</div>
<br /><br />    
<p>
    @Html.ActionLink("Edit", "Edit", new { RegionID=Model.RegionID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<br><hr /><br>
<h1>Territories</h1>
<table class="table" id="tbl_Territories_List">
<thead>
	<tr class="tableCaption">
		<th>TerritoryID</th>
		<th>TerritoryDescription</th>
		<th>RegionID</th>
	</tr>
</thead>
<tbody>
@foreach (var ft in Model.TerritoriesList) 
{
	<tr>
		<td>@Html.DisplayFor(model => ft.TerritoryID)</td>
		<td>@Html.DisplayFor(model => ft.TerritoryDescription)</td>
		<td>@Html.DisplayFor(model => ft.RegionID)</td>
	</tr>
}

</tbody>
</table>
    <script>
        $(document).ready(function () {
            $('#tbl_Territories_List').DataTable();
        });
    </script>
